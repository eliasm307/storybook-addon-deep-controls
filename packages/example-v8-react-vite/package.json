{
  "name": "storybook-addon-deep-controls-example-v8-react-vite",
  "private": true,
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "scripts": {
    "storybook": "echo 'Starting storybook' && npm run addon:build && cross-env VITE_CJS_TRACE=true storybook dev -p 6018 --no-open",
    "storybook:watch": "cross-env VITE_CJS_TRACE=true nodemon",
    "test": "npm --prefix ../example-v8-react-generic run playwright:v8-vite -- test",
    "test:ui": "npm --prefix ../example-v8-react-generic run playwright:v8-vite -- test --ui",
    "test:codegen": "npm --prefix ../example-v8-react-generic run playwright:v8-vite -- codegen http://localhost:6018/",
    "addon:build": "echo 'Building addon...' && npm --prefix ../addon run build",
    "build": "npm run addon:build && storybook build"
  },
  "devDependenciesNotes": [
    "Storybook version(s) fixed to 8.3.6 as versions after this have an issue that affects the addon, which is fixed in v9"
  ],
  "devDependencies": {
    "@storybook-addon-deep-controls/common-internal": "workspace:*",
    "@storybook/addon-essentials": "8.3.6",
    "@storybook/builder-vite": "8.3.6",
    "@storybook/react": "8.3.6",
    "@storybook/react-vite": "8.3.6",
    "@storybook/types": "8.3.6",
    "@vitejs/plugin-react": "4.7.0",
    "cross-env": "7.0.3",
    "nodemon": "3.1.10",
    "storybook": "8.3.6",
    "storybook-addon-deep-controls": "workspace:*",
    "vite": "6.3.5"
  }
}
