{
  "name": "storybook-addon-deep-controls-example-v10-vite",
  "private": true,
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "scripts": {
    "storybook": "echo 'Starting storybook' && npm run addon:build && cross-env VITE_CJS_TRACE=true storybook dev -p 6200 --no-open",
    "storybook:watch": "cross-env VITE_CJS_TRACE=true nodemon",
    "test": "npm --prefix ../example-v10-generic run playwright:vite -- test",
    "test:ui": "npm --prefix ../example-v10-generic run playwright:vite -- test --ui",
    "test:codegen": "npm --prefix ../example-v10-generic run playwright:vite -- codegen http://localhost:6200/",
    "addon:build": "echo 'Building addon...' && npm --prefix ../addon run build",
    "build": "npm run addon:build && storybook build",
    "deploy": "npm run build && netlify deploy --prod"
  },
  "devDependencies": {
    "@storybook-addon-deep-controls/common-internal": "workspace:*",
    "@storybook/addon-docs": "10.0.2",
    "@storybook/builder-vite": "10.0.2",
    "@storybook/react": "10.0.2",
    "@storybook/react-vite": "10.0.2",
    "@vitejs/plugin-react": "4.5.2",
    "cross-env": "7.0.3",
    "nodemon": "3.1.10",
    "storybook": "10.0.2",
    "storybook-addon-deep-controls": "workspace:*",
    "vite": "6.3.5"
  }
}
